<div style="display: grid; grid-template-columns: 50% 50%;margin: 10px 10px 10px 10px;">
    {{#each tour}}
    <div class="container-img-card">
        <a href="/tours/{{this.MaTour}}" class="tag-a-detail-tour">
            <img class="img-headerPosition" src="{{this.AnhDaiDien}}" alt="">
            <div class="overlay-img-headerPosition">
                <p class="overlay-inside-date">{{this.ThoiGianTour}}</p>
                <p class="overlay-inside-title">Tour : {{this.TenTour}} </p>
                <div class="overlay-inside-interaction">
                    <i class="fas fa-comment-dots overlay-inside-interaction-icon"></i>
                    <span class="overlay-inside-interaction-title">120k</span>
                    <i class="fas fa-eye overlay-inside-interaction-icon"></i>
                    <span class="overlay-inside-interaction-title">120k</span>
                    <i class="fas fa-share-alt overlay-inside-interaction-icon"></i>
                    <span class="overlay-inside-interaction-title">120k</span>
                </div>
            </div>
        </a>
    </div>
    {{/each}}
</div>

<script>
    
    $('.container-item-tag').removeClass('active')
    $('.container-item-tag').eq(0).addClass('active')
   
</script>