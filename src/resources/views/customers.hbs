<link rel="stylesheet" href="/css/Customers.css">
<form id="form-change-NgayKhoiHanh">
    <input hidden type="text" name="MaDoan" id="input-form-change-NgayKhoiHanh-MaDoan" value="">
    <input hidden type="text" name="NgayKhoiHanh" id="input-form-change-NgayKhoiHanh-NgayKhoiHanh" value="">
</form>
<div style="margin: 20px;">
    <div>
        <div>
            <span>Thông tin các đoàn du lịch </span>
            <select name="" id="information-doandulich">
                <option value="all">All</option>
                <option value="active">Active</option>
                <option value="finished">Finished</option>
            </select>
            <button id="button-add-new-doandulich">Thêm 1 đoàn mới</button>
        </div>
        {{!-- table đoàn du lịch --}}
        <div>
            <table>
                <tr>
                    <th>Mã Tour</th>
                    <th>Mã Đoàn</th>
                    <th>Tên đoàn du lịch</th>
                    <th>Ngày khởi hành(mm/dd/yyyy)</th>
                    <th>Thành viên</th>
                    <th>Tổng tiền</th>
                    <th></th>
                </tr>
                {{#each doandulichs}}
                <tr class="row-doandulich">
                    <td hidden class="row-check-finish-doandulich">{{this.CheckFinish}}</td>
                    <td>{{this.MaTour}}</td>
                    <td>{{this.MaDoan}}</td>
                    <td>{{this.TenDoan}}</td>
                    <td>{{this.NgayKhoiHanh}}</td>
                    <td>{{this.SoLuongThanhVien}}</td>
                    <td>{{this.ChiPhi}}</td>
                    <td>
                        <div class="container-icon-extend-option">
                            <div class="icon-extend-option">
                                <i class="fas fa-ellipsis-v"></i>
                            </div>
                        </div>
                        <div class="menu-icon-extend-option">
                            <div class="item-option-icon-extend-option">
                                <table style="margin: 0;">
                                    <tr style="background-color: transparent;">
                                        <td>
                                            <i class="fas fa-edit"></i>
                                        </td>
                                        <td class="btn-edit-doandulich">Sửa</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="item-option-icon-extend-option">
                                <table style="margin: 0;">
                                    <tr style="background-color: transparent;">
                                        <td>
                                            <i class="fas fa-trash-alt"></i>
                                        </td>
                                        <td>Xóa</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
        <div>
            <p>Thông tin các khách hàng trong đoàn</p>
            <select name="" id="information-khachhang">
                <option value="All">All</option>
                {{#each doandulichs}}
                <option value="{{this.MaDoan}}">{{this.MaDoan}}</option>
                {{/each}}
            </select>
        </div>
        {{!-- table khách du lịch --}}
        <div>
            <table>
                <tr>
                    <th>Họ tên </th>
                    <th>CMND</th>
                    <th>Giới tính</th>
                    <th>Số điện thoại</th>
                    <th>Mã đoàn</th>
                    <th></th>
                </tr>
                {{#each khachhangs}}
                <tr class="row-khachhang">
                    <td>{{this.HoTen}}</td>
                    <td>{{this.CMND}}</td>
                    <td>{{this.GioiTinh}}</td>
                    <td>{{this.SDT}}</td>
                    <td>{{this.MaDoan}}</td>
                    <td>
                        <div class="container-icon-extend-option">
                            <div class="icon-extend-option">
                                <i class="fas fa-ellipsis-v"></i>
                            </div>
                        </div>
                        {{!-- <div class="menu-icon-extend-option">
                            <p class="item-option-icon-extend-option">Sửa</p>
                            <p class="item-option-icon-extend-option"> Xóa</p>
                        </div> --}}
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</div>
{{!-- những đoạn code liên quan đến page này thì code ở link dưới nó nằm trong thư mục public --}}
